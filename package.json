{
    "name": "nestjs-rayer-architecture",
    "version": "1.0.0",
    "main": "dist/main.js",
    "license": "MIT",
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:local": "node scripts/local.js",
        "start:dev": "node scripts/dev.js",
        "start:dev:watch": "npx dotenv -e env/.env.development -- nest start --watch",
        "start:debug": "npx dotenv -e env/.env.development -- nest start --debug --watch",
        "start:prod": "npx dotenv -e env/.env.production -- node -r ./scripts/tracing.js dist/main.js",
        "docker:up": "node scripts/docker-up.js",
        "docker:down": "docker-compose -f docker/docker-compose.monitoring.yml down",
        "docker:logs": "docker-compose -f docker/docker-compose.monitoring.yml logs -f"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.12",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.12",
        "@nestjs/platform-express": "^11.1.12",
        "@nestjs/swagger": "^11.2.5",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/typeorm": "^11.0.0",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.69.0",
        "@opentelemetry/exporter-prometheus": "^0.211.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
        "@opentelemetry/resources": "^2.5.0",
        "@opentelemetry/sdk-node": "^0.211.0",
        "@opentelemetry/semantic-conventions": "^1.39.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "cookie-parser": "^1.4.7",
        "mysql2": "^3.16.2",
        "nestjs-otel": "^6.1.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.28",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.16",
        "@nestjs/schematics": "^11.0.9",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.6",
        "@types/node": "^25.1.0",
        "@types/uuid": "^11.0.0",
        "cross-env": "^10.1.0",
        "dotenv-cli": "^11.0.0",
        "prettier": "^3.8.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    }
}
